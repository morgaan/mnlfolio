<?
	/* 
		DESCRIPTION: A very simple layout with the set titles as navigation items
		AUTHOR: morgan cugerone
		VERSION: 1.5
	*/

	$layout = "";

	$layout .="	<table border=\"0\" cellpadding=\"1\" align=\"center\" >";
	$layout .="		<tr>";
	$layout .="			<td class=\"body\" align=\"center\">";
	$layout .="		    	&nbsp;<b>&nbsp;</b>&nbsp;";
	$layout .="		    </td>";

	$selectedSets = explode(",",getTypedConf("SelectedSets"));
	$objectsInstances = getFlickrObjectsInstances();

	$activeSet = explode(".",$activeSet);
	$f = $objectsInstances[$activeSet[0]];
	$activeSetInfo = $f->photosets_getInfo($activeSet[1]);	
	
	for($i = 0; $i < count($selectedSets); $i++) {
		
		$rest = $i%$nSetByLine;
		$accountSet = explode(".",$selectedSets[$i]);
		$actualDelimiter = $delimiter;
		if(($rest == ($nSetByLine-1) && $i != 0 && $i < count($selectedSets)) || ($i == (count($selectedSets)-1)))
			$actualDelimiter = "&nbsp";
  		if(count($accountSet) == 2) {
			$account = $accountSet[0];
			$set = $accountSet[1];
			$f = $objectsInstances[$account];
			$setInfo = $f->photosets_getInfo($set);
			$photoInfo = $f->photos_getInfo($setInfo['primary'],NULL);
			if(substr_count(getTypedConf("SelectedSets"),$selectedSets[$i]) > 0) {
		  		if(isset($selectedSets[$i]) && $setid == $selectedSets[$i]) {
	
	$layout .="			<td align=\"center\">";
	$layout .="				<img class=\"thumbselected\" border=\"0\" src=\"".$f->buildPhotoURL($photoInfo, "square")."\" onmouseover=\"javascript:document.getElementById('activeSet').innerHTML='<p class=\'body\' style=\'text-align:".$setsLinksAlignment.";\' ><b>".$setInfo["title"]."</b></p>';\" onmouseout=\"javascript:document.getElementById('activeSet').innerHTML='<p class=\'body\' style=\'text-align:".$setsLinksAlignment.";\' ><b>".$activeSetInfo['title']."</b></p>';\" />";
	$layout .="			</td>";
	$layout .="			<td class=\"body\" valign=\"middle\">";
	$layout .="				&nbsp;<b>$actualDelimiter</b>&nbsp;</td>";
	$layout .="			</td>";

	if($rest == ($nSetByLine-1) && $i != 0) {
	  $layout .="   </td></tr>";
	  if($i < count($selectedSets))
	  {
	   $layout .="  <tr>";
	   $layout .="   <td class=\"body\" align=\"center\">";
	   $layout .="       &nbsp;<b>$actualDelimiter</b>&nbsp;";
	   $layout .="      </td>";
	  }
	 }
	 else
	 $layout .="   </td>";


	  			} else {
		
	$layout .="			<td align=\"center\">";
	$layout .="				<a href='index.php?setid=".$selectedSets[$i]."'>";
	$layout .="					<img class=\"thumb\" border=\"0\" src=\"".$f->buildPhotoURL($photoInfo, "square")."\" onmouseover=\"javascript:document.getElementById('activeSet').innerHTML='<p class=\'body\' style=\'text-align:".$setsLinksAlignment.";\' ><b>".$setInfo["title"]."</b></p>';\" onmouseout=\"javascript:document.getElementById('activeSet').innerHTML='<p class=\'body\' style=\'text-align:".$setsLinksAlignment.";\' ><b>".$activeSetInfo["title"]."</b></p>';\" />";
	$layout .="				</a>";
	$layout .="			</td>";
	$layout .="			<td class=\"body\" valign=\"middle\">";
	$layout .="				&nbsp;<b>$actualDelimiter</b>&nbsp;";
	if($rest == ($nSetByLine-1) && $i != 0) {
	  $layout .="   </td></tr>";
	  if($i < count($selectedSets)-1)
	  {
	   $layout .="  <tr>";
	   $layout .="   <td class=\"body\" align=\"center\">";
	   $layout .="       &nbsp;<b>$actualDelimiter</b>&nbsp;";
	   $layout .="      </td>";
	  }
	}
	 else
	 $layout .="   </td>";
	  			}
			}
		}
	}	
 	if($rest != ($nSetByLine-1))
 	{
  		$layout .="  <td colspan=\"".(($nSetByLine-($rest+1))*2)."\"></></tr>";
 	}
	$layout .="		</tr>";
	$layout .="	</table>";
	$layout .="	<div id=\"activeSet\">";
	$layout .="		<p class=\"body\" style=\"text-align:".$setsLinksAlignment.";\" ><b>".$activeSetInfo['title']."</b></p>";
	$layout .="	</div>";
	
?>