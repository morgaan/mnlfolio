<?
	/* 
		DESCRIPTION: A very simple layout with the set titles as navigation items
		AUTHOR: morgan cugerone
		VERSION: 1.0 
	*/

	$layout = "";

	$layout .="	<table border=\"0\" cellpadding=\"1\" align=\"center\" >";
	$layout .="		<tr>";
	$layout .="			<td align=\"center\">";
	$layout .="		    	&nbsp;<b>$delimiter</b>&nbsp;";
	$layout .="		    </td>";
	
	foreach ($photosets['photoset'] as $set) {
		$setId = $set['id'];
		if(substr_count(getConf("SelectedSets"),$setId) > 0) {
		  if(isset($setId) && $setid == $set['id']) {
	
	$layout .="			<td>";
	$layout .="				<p class=\"body\">".$set['title']."</p>";
	$layout .="			</td>";
	$layout .="			<td valign=\"middle\">";
	$layout .="				&nbsp;<b>$delimiter</b>&nbsp;</td>";
	$layout .="			</td>";

	  		} else {
		
	$layout .="			<td>";
	$layout .="				<a href='index.php?setid=".$set['id']."'>";
	$layout .="					".$set['title'];
	$layout .="				</a>";
	$layout .="			</td>";
	$layout .="			<td valign=\"middle\">";
	$layout .="				&nbsp;<b>$delimiter</b>&nbsp;";
	$layout .="			</td>";
	
	  		}
		}
	}	

	$layout .="		</tr>";
	$layout .="	</table>";
	
?>